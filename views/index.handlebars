<div class="container">
	<h1>Your Newsstand</h1>
	<div id="articles">
		<div id="navButtons">
			<button id="scrapeBtn" class='btn cyan darken-4 white-text'>Scrape Articles</button>
			<button id="viewSaved" class='btn cyan darken-4 white-text'>Bookmarked Articles</button>
		</div>
		<table>
			<thead>
				<tr>
					<th>HEADLINE</th>
					<th>SUMMARY</th>
					<th>BOOKMARK</th>
					<th>LINK</th>
				</tr>
			</thead>
			<tbody id="results">

				{{#each article}}
				<tr>
					<td id='headline'>{{this.headline}}</td>
					<td id='summary'> {{this.summary}}</td>
					<td>
						<button class='blue-grey lighten-3 white-text' id="saveBtn" data-id="{{this._id}}">Bookmark Article</button>
					</td>
					<td>
						<a href="https://www.bbc.com/{{this.link}}" target="_blank">BBC News</a>
					</td>
				</tr>
				{{/each}}
	</div>
</div>

<script src="/js/index.js"></script>